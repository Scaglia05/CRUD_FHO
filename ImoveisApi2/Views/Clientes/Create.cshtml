@model Cliente

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4 title-style">Adicionar Cliente</h1>
<h4 class="text-muted text-center subtitle-style">Cadastro de Cliente</h4>
<hr class="custom-hr" />


<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Nome -->
            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- CPF -->
            <div class="form-group mb-3">
                <label asp-for="CPF" class="form-label"></label>
                <input asp-for="CPF" class="form-control" placeholder="Digite o CPF" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>

            <!-- Endereço -->
            <div class="form-group mb-3">
                <label asp-for="Endereco" class="form-label"></label>
                <input asp-for="Endereco" class="form-control" placeholder="Digite o endereço" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <!-- Data de Nascimento -->
            <div class="form-group mb-3">
                <label asp-for="DataNascimento" class="form-label"></label>
                <input asp-for="DataNascimento" class="form-control" type="date" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <!-- E-mail -->
            <div class="form-group mb-3">
                <label asp-for="Email_Cliente" class="form-label"></label>
                <input asp-for="Email_Cliente" class="form-control" placeholder="Digite o e-mail" />
                <span asp-validation-for="Email_Cliente" class="text-danger"></span>
            </div>

            <!-- Botão de envio -->
            <div class="form-group">
                <button type="submit" class="btn btn-success w-100">Adicionar Cliente</button>
            </div>

            <!-- Link para voltar à lista dentro do formulário -->
            <div class="text-center mt-4 mb-2">
                <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a Lista</a>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-transparent w-100"></button>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-transparent w-100"></button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .btn-transparent {
        background-color: transparent;
        border: transparent; /* Ajuste a cor da borda conforme necessário */
        color: #000; /* Cor do texto (ajuste conforme desejado) */
    }

    /* Estilo para o título */
    .title-style {
        font-size: 36px;
        font-weight: bold;
        color: #007bff; /* Cor principal, ajuste conforme necessário */
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 2px 2px 5px rgba(0, 123, 255, 0.3); /* Sombra leve */
        margin-bottom: 20px; /* Espaçamento extra */
    }

    /* Estilo para o subtítulo */
    .subtitle-style {
        font-size: 20px;
        font-weight: 500;
        color: #6c757d; /* Cor de texto mais suave */
        margin-bottom: 30px; /* Espaçamento extra abaixo */
    }

    /* Personalizando a linha (hr) */
    .custom-hr {
        border-top: 2px solid #007bff;
        width: 50%;
        margin: 0 auto; /* Centralizar */
        margin-bottom: 30px; /* Espaçamento abaixo */
    }

</style>