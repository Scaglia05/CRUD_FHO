@model Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1 class="text-center my-4">Excluir Cliente</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="border p-4 rounded shadow-sm bg-light">
            <h3 class="text-center text-danger mb-4">Tem certeza de que deseja excluir este cliente?</h3>

            <h4 class="text-primary mb-3">Detalhes do Cliente</h4>
            <hr />

            <!-- Detalhes do Cliente -->
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-4 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CPF)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CPF)
                </dd>

                <dt class="col-sm-4 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>

                <dt class="col-sm-4 font-weight-bold">
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DataNascimento)
                </dd>

                <dt class="col-sm-4 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Email_Cliente)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email_Cliente)
                </dd>
            </dl>

            <!-- Formulário para Exclusão -->
            <form asp-action="Delete" method="post" class="text-center mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg me-3">
                    <i class="bi bi-trash"></i> Excluir
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Voltar para a Lista
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
