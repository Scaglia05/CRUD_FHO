@model Vendedor

@{
    ViewData["Title"] = "Editar Vendedor";
}

<h1 class="text-center my-4">Editar Vendedor</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 bg-light">
            <h4 class="text-center mb-4">Informações do Vendedor</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Nome_Vendedor" class="control-label font-weight-bold"></label>
                    <input asp-for="Nome_Vendedor" class="form-control" placeholder="Digite o nome" />
                    <span asp-validation-for="Nome_Vendedor" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CRECI_Vendedor" class="control-label font-weight-bold"></label>
                    <input asp-for="CRECI_Vendedor" class="form-control" placeholder="Digite o CRECI" />
                    <span asp-validation-for="CRECI_Vendedor" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Telefone_Vendedor" class="control-label font-weight-bold"></label>
                    <input asp-for="Telefone_Vendedor" class="form-control" placeholder="Digite o número de telefone" />
                    <span asp-validation-for="Telefone_Vendedor" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email_Vendedor" class="control-label font-weight-bold"></label>
                    <input asp-for="Email_Vendedor" class="form-control" placeholder="Digite o e-mail" />
                    <span asp-validation-for="Email_Vendedor" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Salvar Alterações" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-link">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
