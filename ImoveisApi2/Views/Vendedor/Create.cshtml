@model Vendedor

@{
    ViewData["Title"] = "Criar";
}

<h1 class="text-center my-4">Criar Vendedor</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="border p-4 rounded shadow-sm bg-light">
            <h4 class="text-center mb-4">Detalhes do Vendedor</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome_Vendedor" class="control-label font-weight-bold"></label>
                <input asp-for="Nome_Vendedor" class="form-control form-control-lg" placeholder="Digite o nome do vendedor" />
                <span asp-validation-for="Nome_Vendedor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CRECI_Vendedor" class="control-label font-weight-bold"></label>
                <input asp-for="CRECI_Vendedor" class="form-control form-control-lg" placeholder="Digite o CRECI" />
                <span asp-validation-for="CRECI_Vendedor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Telefone_Vendedor" class="control-label font-weight-bold"></label>
                <input asp-for="Telefone_Vendedor" class="form-control form-control-lg" placeholder="Digite o número de telefone" />
                <span asp-validation-for="Telefone_Vendedor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email_Vendedor" class="control-label font-weight-bold"></label>
                <input asp-for="Email_Vendedor" class="form-control form-control-lg" placeholder="Digite o endereço de e-mail" />
                <span asp-validation-for="Email_Vendedor" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Criar Vendedor" class="btn btn-success btn-lg w-100" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
