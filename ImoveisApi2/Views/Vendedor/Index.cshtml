@model IEnumerable<Vendedor>

@{
    ViewData["Title"] = "Lista de Vendedores";
}

<h1 class="text-center my-4">Lista de Vendedores</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary btn-lg">Adicionar Vendedor</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome_Vendedor)</th>
            <th>@Html.DisplayNameFor(model => model.CRECI_Vendedor)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone_Vendedor)</th>
            <th>@Html.DisplayNameFor(model => model.Email_Vendedor)</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome_Vendedor)</td>
                <td>@Html.DisplayFor(modelItem => item.CRECI_Vendedor)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone_Vendedor)</td>
                <td>@Html.DisplayFor(modelItem => item.Email_Vendedor)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
