@using System.Reflection
@using System.ComponentModel
@using static ImoveisApi2.Models.Enums
@model Imovel

@{
    ViewData["Title"] = "Criar Imóvel";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 title-style">Cadastrar Imóvel</h1>
    <h4 class="text-muted text-center mb-4">Preencha as informações do imóvel abaixo</h4>
    <hr class="custom-hr" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

@* 
                <!-- Campo ID do Vendedor -->
                <div class="form-group mb-3">
                    <label asp-for="Id_Vendedor" class="control-label">ID do Vendedor</label>
                    <input asp-for="Id_Vendedor" class="form-control" placeholder="Digite o ID do vendedor" />
                    <span asp-validation-for="Id_Vendedor" class="text-danger"></span>
                </div> *@

                <!-- Campo Endereço -->
                <div class="form-group mb-3">
                    <label asp-for="Endereco_Imovel" class="control-label">Endereço</label>
                    <input asp-for="Endereco_Imovel" class="form-control" placeholder="Digite o endereço do imóvel" />
                    <span asp-validation-for="Endereco_Imovel" class="text-danger"></span>
                </div>

                <!-- Campo Área Total -->
                <div class="form-group mb-3">
                    <label asp-for="AreaTotal_Imovel" class="control-label">Área Total (m²)</label>
                    <input asp-for="AreaTotal_Imovel" class="form-control" placeholder="Informe a área total" />
                    <span asp-validation-for="AreaTotal_Imovel" class="text-danger"></span>
                </div>

                <!-- Campo Tipo -->
                <div class="form-group mb-3">
                    <label asp-for="Tipo" class="control-label">Tipo de Imóvel</label>
                    <select asp-for="Tipo" class="form-control">
                        <option value="">Selecione o tipo</option>
                        @foreach (var tipo in Enum.GetValues(typeof(Tipo_Imovel))) {
                            var tipoDescricao = tipo.GetType()
                            .GetMember(tipo.ToString())
                            .FirstOrDefault()?
                            .GetCustomAttribute<DescriptionAttribute>()?
                            .Description ?? tipo.ToString();
                            <option value="@tipo">@tipoDescricao</option>
                        }
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <!-- Campo Status -->
                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="">Selecione o status</option>
                         @foreach (var status in Enum.GetValues(typeof(Status_Imovel))) {
                            var statusDescricao = status.GetType()
                            .GetMember(status.ToString())
                            .FirstOrDefault()?
                            .GetCustomAttribute<DescriptionAttribute>()?
                            .Description ?? status.ToString();
                            <option value="@status">@statusDescricao</option>
                        }
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>


                <!-- Campo Valor Total -->
                <div class="form-group mb-3">
                    <label asp-for="ValorTotal" class="control-label">Valor Total</label>
                    <input asp-for="ValorTotal" class="form-control" placeholder="Digite o valor total do imóvel" />
                    <span asp-validation-for="ValorTotal" class="text-danger"></span>
                </div>

                <!-- Botão de Submit -->
                <div class="form-group">
                    <input type="submit" value="Cadastrar Imóvel" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Voltar para a Lista</a>
    </div>
</div>

<!-- Footer -->
<footer class="footer mt-5 py-4 bg-dark text-white text-center">
    <div class="container">
        <p class="mb-0">© 2024 FHO -> Todos os direitos reservados</p>
        <p><a href="https://www.suaempresa.com.br" class="text-white">Visite nosso site</a></p>
    </div>
</footer>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

