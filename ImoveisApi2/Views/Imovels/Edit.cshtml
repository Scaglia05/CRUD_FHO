@using System.ComponentModel
@using System.Reflection
@using static ImoveisApi2.Models.Enums
@model Imovel

@{
    ViewData["Title"] = "Editar Imóvel";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 title-style">Editar Imóvel</h1>

    <div class="border p-4 rounded shadow-sm bg-light">
        <h4 class="text-primary">Informações do Imóvel</h4>
        <hr />
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Endereco_Imovel" class="control-label font-weight-bold"></label>
                <input asp-for="Endereco_Imovel" class="form-control" placeholder="Endereço do imóvel" />
            </div>

            <div class="form-group">
                <label asp-for="AreaTotal_Imovel" class="control-label font-weight-bold"></label>
                <input asp-for="AreaTotal_Imovel" class="form-control" placeholder="Área total do imóvel (m²)" />
            </div>

            <!-- Campo Tipo -->
            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label">Tipo de Imóvel</label>
                <select asp-for="Tipo" class="form-control">
                    <option value="">Selecione o tipo</option>
                    @foreach (var tipo in Enum.GetValues(typeof(Tipo_Imovel))) {
                        var tipoDescricao = tipo.GetType()
                        .GetMember(tipo.ToString())
                        .FirstOrDefault()?
                        .GetCustomAttribute<DescriptionAttribute>()?
                        .Description ?? tipo.ToString();
                        <option value="@tipo">@tipoDescricao</option>
                    }
                </select>
            </div>

            <!-- Campo Status -->
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="">Selecione o status</option>
                    @foreach (var status in Enum.GetValues(typeof(Status_Imovel))) {
                        var statusDescricao = status.GetType()
                        .GetMember(status.ToString())
                        .FirstOrDefault()?
                        .GetCustomAttribute<DescriptionAttribute>()?
                        .Description ?? status.ToString();
                        <option value="@status">@statusDescricao</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label font-weight-bold"></label>
                <input asp-for="ValorTotal" class="form-control" placeholder="Valor total do imóvel" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-transparent w-100"></button>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Salvar" class="btn btn-success btn-lg" />
            </div>
        </form>
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Voltar para a Lista</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-transparent w-100"></button>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-transparent w-100"></button>
        </div>
    </div>

</div>

<style>
    .btn-transparent {
        background-color: transparent;
        border: transparent; /* Ajuste a cor da borda conforme necessário */
        color: #000; /* Cor do texto (ajuste conforme desejado) */
    }

    /* Estilo para o título */
    .title-style {
        font-size: 36px;
        font-weight: bold;
        color: #007bff; /* Cor do título */
    }

    /* Estilo para os campos do formulário */
    .form-group label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        font-size: 1.1rem;
        border-radius: 5px;
    }

    /* Estilo para os botões */
    .btn-success {
        font-weight: bold;
        font-size: 1.2rem;
    }

    .btn-outline-secondary {
        font-weight: bold;
        font-size: 1.2rem;
    }

    /* Estilo para a borda e sombra do box */
    .border {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
