@model Imovel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 title-style">Excluir Imóvel</h1>
    <h3 class="text-center text-danger mb-4">Você tem certeza de que deseja excluir este imóvel?</h3>

    <div class="border p-4 rounded shadow-sm bg-light">
        <h4 class="text-primary">Detalhes do Imóvel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Endereco_Imovel)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Endereco_Imovel)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.AreaTotal_Imovel)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.AreaTotal_Imovel)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Tipo)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.ValorTotal)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ValorTotal)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Excluir Imóvel</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Voltar para a Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    <style>
        /* Estilo para o título */
        .title-style {
            font-size: 36px;
            font-weight: bold;
            color: #dc3545; /* Cor do título para destacar */
        }

        /* Estilo para as informações do imóvel */
        .dl-row dt {
            font-weight: bold;
            color: #007bff;
        }

        .dl-row dd {
            font-size: 1.1rem;
        }

        /* Estilo para o botão de exclusão */
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            font-weight: bold;
        }

        /* Estilo para o botão de voltar */
        .btn-outline-secondary {
            font-weight: bold;
            font-size: 1.1rem;
        }

        /* Estilo para a borda e sombra do box */
        .border {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
